{{#if updateStudioForm}}
  <h2>Update Studio</h2>
   <div>
     <form>
       <div class="form-group">
         <label for="name">Studio Name</label>
         {{input value=name id="name" placeholder=studio.name}}
       </div>

       <div class="form-group">
         <label for="image">Image URL</label>
         {{input value=image id="image" placeholder=studio.image}}
       </div>

       <div class="form-group">
         <label for="description">Description</label>
         {{input value=description id="description" placeholder=studio.description}}
       </div>

       <button {{action 'updater' studio}}>Save</button>
       <button {{action 'hideForm'}}>Hide</button>
     </form>
   </div>
{{else}}
  <button {{action 'updateStudioForm'}}>Update Studio</button>
{{/if}}
